<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:padding="15sp"
        android:text="APP para demonstrar o uso de permissões"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ckbx_cameraID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão da Camera"/>
    <CheckBox
        android:id="@+id/ckbx_internetID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão da Internet"/>
    <CheckBox
        android:id="@+id/ckbx_ChamadaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão para Chamadas"/>
    <CheckBox
        android:id="@+id/ckbx_ContatosID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão ler Contados"/>
    <CheckBox
        android:id="@+id/ckbx_wifiID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão acessar WiFI"/>
    <CheckBox
        android:id="@+id/ckbx_SdID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão para Ler SD:"/>
    <CheckBox
        android:id="@+id/ckbx_GPsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="true"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:text="Permissão para o GPS"/>



</LinearLayout>