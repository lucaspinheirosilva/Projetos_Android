<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtvw_informAlterarFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CLIQUE NA FOTO PARA ALTERAR"
        android:textColor="#FF0505"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgvw_fotoTirada"
        android:layout_width="190dp"
        android:layout_height="203dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/efeito_ripple"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Informe o texto ou palavra que o APP ira reproduzir" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Texto a reproduzir:"
        android:textColorHint="#969696"
        app:counterMaxLength="70"
        app:hintTextAppearance="@style/HintTextFloating">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edttxt_textoFalar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/bg_edttxt"
            android:inputType="text"
            android:maxLength="70"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/tamanho_fonte" />

    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnCancelar_TextoFalar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#F59393"
            android:text="CANCELAR" />

        <Button
            android:id="@+id/btnSalvar_TextoFalar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ABEB97"
            android:text="SALVAR" />
    </LinearLayout>
</LinearLayout>