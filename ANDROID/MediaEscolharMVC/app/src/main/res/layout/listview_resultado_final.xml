<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutID"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="100sp"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="85sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/txtLogo"
        android:padding="5dp"
        android:src="@mipmap/ic_listagem_geral_round"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBimestre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:padding="2dp"
                android:text="@string/fragment_Bimestre"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txtMateria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:paddingEnd="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/Texto"
                android:text="MatemÃ¡tica"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSituacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                android:padding="5sp"
                android:text="Aprovado"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtmediaRESULTADOFinalPrimeiro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="end"
                android:paddingEnd="10sp"
                android:paddingRight="10sp"
                android:text="10.0"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3sp">

            <ImageButton
                android:id="@+id/imgbtn_Pesquisar"
                android:layout_width="35sp"
                android:tooltipText="Pesquisar"
                android:layout_height="35sp"
                android:layout_marginEnd="40sp"
                android:layout_marginRight="40sp"
                android:background="@mipmap/ic_pesquisar" />

            <ImageButton
                android:id="@+id/imgbtn_deletar"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginEnd="40sp"
                android:layout_marginRight="40sp"
                android:tooltipText="Deletar"
                android:background="@mipmap/ic_deletar" />

            <ImageButton
                android:id="@+id/imgbtn_alterar"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginEnd="40sp"
                android:layout_marginRight="40sp"
                android:tooltipText="Alterar"
                android:background="@mipmap/ic_alterar" />

            <ImageButton
                android:id="@+id/imgbtn_salvar"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:tooltipText="Salvar"
                android:background="@mipmap/ic_salvar"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>